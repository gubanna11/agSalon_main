@model NewServiceVM

@using agSalon.Data.ViewModels

@{
    ViewData["Title"] = "New Service";
}

<form asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>

    <div>
        <label asp-for="Price"></label>
        <input step="any" asp-for="Price" />
    </div>

    <div>
        <label asp-for="GroupId"></label>
        <select asp-for="GroupId" asp-items="ViewBag.Groups"> </select>
    </div>

    <div>
        @*<a asp-action="Index"  asp-route-id="@Model.GroupId"> Show all </a>*@
        <input type="submit" value="Create"/>
    </div>
</form>